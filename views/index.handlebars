<div class="container">


<h1>BURGER!</h1>
<div class="row clearBG">
  <div class="col-md-6">
    <h2>BURGERS that are ORDERED!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger/devoured devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h2>BURGERS that are DEVOURED!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger/devoured devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


<div class="row clearBG addOrder">
  <div class="col-md-12">
    <h2>Add a ORDER</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">BURGER Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <div class="form-group">
        <label for="devoured">DEVOURED?</label><br>
        <input type="radio" name="devoured" value="1" checked> devour!<br>
        <input type="radio" name="devoured" value="0"> ORDER
      </div>

      <button type="submit" class="btn btn-success">Add ORDER</button>
    </form>
  </div>


</div>
</div>
